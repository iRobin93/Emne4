<Window x:Class="MediaPlayerApp.EditPlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayerApp.Data"
        mc:Ignorable="d"
        Title="EditPlaylist" Height="450" Width="800">
    <Grid>
        <!-- Bind to Playlists.playlists (List of Playlist objects) -->
        <TextBlock Text="{Binding MediaPlayerApp.Data.Playlists[0].Name}"></TextBlock>
        <ListBox x:Name="myListBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <!-- Display Playlist Name -->
                   
                        <TextBlock Text="{Binding title}" FontWeight="Bold" Width="66" />
                        <Button Click="Button_Click">Endre</Button>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
