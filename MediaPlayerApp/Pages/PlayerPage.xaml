<Page x:Class="MediaPlayerApp.PlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaPlayerApp.Model"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerPage">

    <Page.Resources>
        <!-- Add a value converter to handle visibility logic -->
        <local:SongToVisibilityConverter x:Key="SongToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="songImage" Height="226" Width="289" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <StackPanel>
                <TextBlock FontWeight="Bold" FontSize="20" Margin="6,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">JukeBox</TextBlock>
                <StackPanel Margin="8,0,0,0" Orientation="Horizontal" >
                    <TextBlock Width="150">Sang:</TextBlock>
                    <TextBlock>Artist:</TextBlock>
                </StackPanel>
                
            <Border Height="227" Width="409" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" Padding="0" CornerRadius="5" Margin="0,5,0,0">
                
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <ListBox x:Name="myListBox" ItemsSource="{Binding Source={x:Static local:Player._songList}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <!-- Display Playlist Name -->
                                    <TextBlock  Width="150" Text="{Binding title}" FontWeight="Bold" />
                                        <TextBlock Width="90" Text="{Binding Artist}"> </TextBlock>
                                        <Image Margin="25,0,0,0" Width="15" Source="/Images/unmute.png">
                                            <Image.Visibility>
                                                <MultiBinding Converter="{StaticResource SongToVisibilityConverter}">
                                                    <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=ListBoxItem}" />
                                                    <Binding Path="Tag" RelativeSource="{RelativeSource AncestorType=ListBoxItem}" />
                                                </MultiBinding>
                                            </Image.Visibility>
                                        </Image>
                                    </WrapPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
